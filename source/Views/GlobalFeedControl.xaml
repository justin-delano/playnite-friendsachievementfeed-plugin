<controls:PluginUserControl x:Class="FriendsAchievementFeed.Views.GlobalFeedControl"
                            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                            xmlns:controls="clr-namespace:Playnite.SDK.Controls;assembly=Playnite.SDK"
                            xmlns:shared="clr-namespace:FriendsAchievementFeed.Views.Shared"
                            mc:Ignorable="d"
                            d:DesignHeight="600"
                            d:DesignWidth="260">

    <!-- Margin to keep the view clear of the window header -->
    <shared:FeedViewControl x:Name="MainControl"
                            Margin="0,30,0,0">
        <shared:FeedViewControl.ExtraFiltersContent>
            <StackPanel Orientation="Vertical">
                <TextBlock Text="{DynamicResource LOCFriendsAchFeed_Feed_Label_Game}"
                    Margin="0,0,0,2"
                    Foreground="{DynamicResource TextBrushDarker}"
                    FontSize="11" />

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />    <!-- Combo -->
                        <ColumnDefinition Width="30" />   <!-- Fixed clear area -->
                    </Grid.ColumnDefinitions>

                    <ComboBox Grid.Column="0"
                            ItemsSource="{Binding GameFilters}"
                            Text="{Binding GameSearchText, UpdateSourceTrigger=PropertyChanged}"
                            IsEditable="True"
                            IsTextSearchEnabled="True"
                            Height="28"
                            Padding="8,2,8,2"
                            HorizontalAlignment="Stretch" />

                    <Button Grid.Column="1"
                            Content="×"
                            Padding="0"
                            Margin="4,0,0,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Click="GameClearButton_Click">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                <Setter Property="Visibility" Value="Visible" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding GameSearchText}" Value="">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding GameSearchText}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </StackPanel>
        </shared:FeedViewControl.ExtraFiltersContent>
    </shared:FeedViewControl>
</controls:PluginUserControl>
