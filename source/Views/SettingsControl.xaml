<!-- SettingsControl.xaml -->
<UserControl x:Class="FriendsAchievementFeed.Views.SettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:conv="clr-namespace:FriendsAchievementFeed.Views.Converters"
             mc:Ignorable="d"
             d:DesignHeight="400"
             d:DesignWidth="600">

    <UserControl.Resources>
        <conv:IndexToDisplayConverter x:Key="IndexToDisplayConverter" />
        <!-- Disable Steam auth buttons while busy (no converters needed) -->
        <Style x:Key="SteamAuthActionButtonStyle"
               TargetType="Button"
               BasedOn="{StaticResource {x:Type Button}}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding SteamAuthBusy, RelativeSource={RelativeSource AncestorType=UserControl}}"
                             Value="True">
                    <Setter Property="IsEnabled" Value="False"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <TabControl x:Name="SettingsTabControl" SelectionChanged="TabControl_SelectionChanged">
            <!-- ================== TAB: GENERAL SETTINGS ================== -->
            <TabItem x:Name="GeneralTab" Header="{DynamicResource LOCFriendsAchFeed_Settings_TabGeneral}">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <StackPanel Margin="20">

                        <!-- Header -->
                        <TextBlock Text="{DynamicResource LOCFriendsAchFeed_Title_PluginName}"
                                   Foreground="{DynamicResource TextBrush}"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Margin="0,0,0,8" />

                        <!-- Description -->
                        <TextBlock Text="{DynamicResource LOCFriendsAchFeed_Settings_Description}"
                                   Foreground="{DynamicResource TextBrush}"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,20" />

                        <!-- ================== STEAM CONFIG ================== -->
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="{DynamicResource LOCFriendsAchFeed_Settings_SteamConnection}"
                                       Foreground="{DynamicResource TextBrush}"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Margin="0,0,0,8" />

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="8" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="3*" />
                                </Grid.ColumnDefinitions>

                                <!-- Steam Web API key -->
                                <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*" />
                                        <ColumnDefinition Width="3*" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0"
                                               Text="{DynamicResource LOCFriendsAchFeed_Settings_SteamApiKey}"
                                               Foreground="{DynamicResource TextBrush}"
                                               VerticalAlignment="Center"
                                               Margin="0,6,8,0" />

                                    <TextBox Grid.Row="0" Grid.Column="1"
                                             Text="{Binding SteamApiKey, UpdateSourceTrigger=PropertyChanged}"
                                             HorizontalAlignment="Stretch" />

                                    <!-- Steam web session auth block -->
                                    <Grid Grid.Row="2" Grid.ColumnSpan="2" Margin="0,12,0,0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="6" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <!-- Option A: bind to UserControl DP instead of x:Name -->
                                        <TextBlock Grid.Row="0" Grid.Column="0"
                                                   Text="{Binding SteamAuthStatus, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                   Foreground="{DynamicResource TextBrush}"
                                                   TextWrapping="Wrap"
                                                   VerticalAlignment="Center" />

                                        <StackPanel Grid.Row="0" Grid.Column="1"
                                                    Orientation="Horizontal"
                                                    HorizontalAlignment="Right"
                                                    Margin="8,0,0,0">
                                                <Button Content="{DynamicResource LOCFriendsAchFeed_Settings_CheckSteamAuth}"
                                                    Style="{StaticResource SteamAuthActionButtonStyle}"
                                                    Click="SteamAuth_Check_Click"
                                                    Width="90"
                                                    Margin="0,0,8,0" />
                                                <Button Content="{DynamicResource LOCFriendsAchFeed_Settings_ReauthSteam}"
                                                    Style="{StaticResource SteamAuthActionButtonStyle}"
                                                    Click="SteamAuth_Authenticate_Click"
                                                    Width="120"
                                                    Margin="0,0,8,0" />
                                                <Button Content="{DynamicResource LOCFriendsAchFeed_Button_Clear}"
                                                    ToolTip="{DynamicResource LOCFriendsAchFeed_Tooltip_Clear}"
                                                    Style="{StaticResource SteamAuthActionButtonStyle}"
                                                    Click="SteamAuth_Clear_Click"
                                                    Width="90" />
                                        </StackPanel>

                                        <ProgressBar Grid.Row="2" Grid.ColumnSpan="2"
                                                     Height="6"
                                                     IsIndeterminate="True">
                                            <ProgressBar.Style>
                                                <Style TargetType="ProgressBar">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding SteamAuthBusy, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                     Value="True">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </ProgressBar.Style>
                                        </ProgressBar>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </StackPanel>

                        <Separator Margin="0,0,0,16" />

                        <!-- ================== ADVANCED / PERFORMANCE ================== -->
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="{DynamicResource LOCFriendsAchFeed_Settings_Advanced}"
                                       Foreground="{DynamicResource TextBrush}"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Margin="0,0,0,8" />

                            <!-- Cache management -->
                            <StackPanel Margin="0,6,0,8">
                                <TextBlock Text="{DynamicResource LOCFriendsAchFeed_Settings_Cache_Title}"
                                           Foreground="{DynamicResource TextBrush}"
                                           FontWeight="Bold"
                                           Margin="0,0,0,6" />
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                               Text="{DynamicResource LOCFriendsAchFeed_Settings_Cache_Description}"
                                               Foreground="{DynamicResource TextBrush}"
                                               TextWrapping="Wrap"
                                               VerticalAlignment="Center" />

                                    <StackPanel Grid.Column="1" Orientation="Vertical" Margin="8,0,0,0">
                                        <Button Content="{DynamicResource LOCFriendsAchFeed_Settings_WipeCache_All}"
                                                Click="WipeCache_Click"
                                                Margin="0,0,0,6" />
                                    </StackPanel>
                                </Grid>
                            </StackPanel>

                            <!-- Periodic updates -->
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <CheckBox Grid.Column="0"
                                          Content="{DynamicResource LOCFriendsAchFeed_Settings_EnablePeriodicUpdates}"
                                          IsChecked="{Binding EnablePeriodicUpdates}"
                                          VerticalAlignment="Center"
                                          Margin="0,0,8,0" />

                                <TextBlock Grid.Column="1"
                                           Text="{DynamicResource LOCFriendsAchFeed_Settings_HoursBetweenUpdates}"
                                           Foreground="{DynamicResource TextBrush}"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0" />

                                <TextBox Grid.Column="2"
                                         Width="70"
                                         Text="{Binding PeriodicUpdateHours, UpdateSourceTrigger=PropertyChanged}"
                                         IsEnabled="{Binding EnablePeriodicUpdates}"
                                         HorizontalAlignment="Left" />
                            </Grid>

                            <!-- Notifications -->
                            <StackPanel Margin="0,4,0,0">
                                <CheckBox Content="{DynamicResource LOCFriendsAchFeed_Settings_EnableNotifications}"
                                          IsChecked="{Binding EnableNotifications}"
                                          VerticalAlignment="Center"
                                          Margin="0,0,0,4" />
                                <CheckBox Content="{DynamicResource LOCFriendsAchFeed_Settings_NotifyPeriodicUpdates}"
                                          IsChecked="{Binding NotifyPeriodicUpdates}"
                                          VerticalAlignment="Center"
                                          Margin="0,2,0,4" />
                                <CheckBox Content="{DynamicResource LOCFriendsAchFeed_Settings_NotifyOnRebuild}"
                                          IsChecked="{Binding NotifyOnRebuild}"
                                          VerticalAlignment="Center"
                                          Margin="0,2,0,0" />
                            </StackPanel>

                            <!-- Quick scan limits -->
                            <StackPanel Margin="0,10,0,0">
                                <TextBlock Text="{DynamicResource LOCFriendsAchFeed_Settings_QuickScan_Title}"
                                           Foreground="{DynamicResource TextBrush}"
                                           FontWeight="Bold"
                                           Margin="0,0,0,4" />
                                <TextBlock Text="{DynamicResource LOCFriendsAchFeed_Settings_QuickScan_Description}"
                                           Foreground="{DynamicResource TextBrush}"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,6" />

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*" />
                                        <ColumnDefinition Width="3*" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                               Text="{DynamicResource LOCFriendsAchFeed_Settings_QuickScan_Friends}"
                                               Foreground="{DynamicResource TextBrush}"
                                               VerticalAlignment="Center"
                                               Margin="0,0,8,0" />
                                    <TextBox Grid.Column="1"
                                             Text="{Binding QuickScanRecentFriendsCount, UpdateSourceTrigger=PropertyChanged}"
                                             HorizontalAlignment="Stretch" />
                                </Grid>

                                <Grid Margin="0,6,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*" />
                                        <ColumnDefinition Width="3*" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                               Text="{DynamicResource LOCFriendsAchFeed_Settings_QuickScan_GamesPerFriend}"
                                               Foreground="{DynamicResource TextBrush}"
                                               VerticalAlignment="Center"
                                               Margin="0,0,8,0" />
                                    <TextBox Grid.Column="1"
                                             Text="{Binding QuickScanRecentGamesPerFriend, UpdateSourceTrigger=PropertyChanged}"
                                             HorizontalAlignment="Stretch" />
                                </Grid>
                            </StackPanel>
                        </StackPanel>

                        <Separator Margin="0,0,0,16" />

                        <!-- ================== APPEARANCE ================== -->
                        <StackPanel>
                            <TextBlock Text="{DynamicResource LOCFriendsAchFeed_Settings_Appearance}"
                                       Foreground="{DynamicResource TextBrush}"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Margin="0,0,0,8" />

                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="3*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           Text="{DynamicResource LOCFriendsAchFeed_Settings_FriendAvatarSize}"
                                           Foreground="{DynamicResource TextBrush}"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0" />
                                <TextBox Grid.Column="1"
                                         Text="{Binding FriendAvatarSize, UpdateSourceTrigger=PropertyChanged}"
                                         HorizontalAlignment="Stretch" />
                            </Grid>

                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="3*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           Text="{DynamicResource LOCFriendsAchFeed_Settings_AchievementIconSize}"
                                           Foreground="{DynamicResource TextBrush}"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0" />
                                <TextBox Grid.Column="1"
                                         Text="{Binding AchievementIconSize, UpdateSourceTrigger=PropertyChanged}"
                                         HorizontalAlignment="Stretch" />
                            </Grid>

                            <CheckBox Content="{DynamicResource LOCFriendsAchFeed_Settings_HideLocked}"
                                      IsChecked="{Binding HideAchievementsLockedForSelf}"
                                      VerticalAlignment="Center"
                                      Margin="0,4,0,0" />

                            <CheckBox Content="{DynamicResource LOCFriendsAchFeed_Settings_ShowSelfUnlockTime}"
                                      IsChecked="{Binding IncludeSelfUnlockTime}"
                                      VerticalAlignment="Center"
                                      Margin="0,4,0,0" />

                            <Grid Margin="8,4,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="3*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           Text="{DynamicResource LOCFriendsAchFeed_Settings_GameFeedTabHeight}"
                                           Foreground="{DynamicResource TextBrush}"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0" />
                                <TextBox Grid.Column="1"
                                         Text="{Binding GameFeedTabHeight, UpdateSourceTrigger=PropertyChanged}"
                                         HorizontalAlignment="Stretch" />
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- ================== TAB: FRIEND SELECTIONS ================== -->
            <TabItem x:Name="FamilySharingTab" Header="{DynamicResource LOCFriendsAchFeed_Settings_TabFamilySharing}">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                            HorizontalScrollBarVisibility="Disabled">
                    <StackPanel Margin="20">
                        <TextBlock Text="{DynamicResource LOCFriendsAchFeed_Settings_FamilySharing_Description}"
                                Foreground="{DynamicResource TextBrush}"
                                FontSize="14"
                                Margin="0,0,0,12" />

                        <ItemsControl ItemsSource="{Binding FriendSlots}" AlternationCount="5">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" VerticalAlignment="Center" Margin="0,0,8,0">
                                            <TextBlock.Inlines>
                                                <Run Text="{DynamicResource LOCFriendsAchFeed_FamilySharing_FriendLabelPrefix}" />
                                                <Run Text=" "/>
                                                <Run Text="{Binding (ItemsControl.AlternationIndex), Mode=OneWay, RelativeSource={RelativeSource AncestorType=ContentPresenter}, Converter={StaticResource IndexToDisplayConverter}}" />
                                                <Run Text=":" />
                                            </TextBlock.Inlines>
                                        </TextBlock>

                                        <ComboBox Grid.Column="1" Height="28"
                                                  Tag="{Binding (ItemsControl.AlternationIndex), Mode=OneWay, RelativeSource={RelativeSource AncestorType=ContentPresenter}}"
                                                  ItemsSource="{Binding Friends, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                  DisplayMemberPath="PersonaName"
                                                  SelectedValuePath="SteamId"
                                                  SelectedValue="{Binding SteamId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                  SelectionChanged="FriendCombo_SelectionChanged"
                                                  IsEditable="True" IsTextSearchEnabled="True"
                                                  TextSearch.TextPath="PersonaName" StaysOpenOnEdit="True" />

                                        <Button Grid.Column="2" Content="Ã—" Padding="0" Margin="4,0,0,0"
                                            HorizontalAlignment="Center" VerticalAlignment="Center"
                                            Click="ClearFriend_Click"
                                            Tag="{Binding (ItemsControl.AlternationIndex), Mode=OneWay, RelativeSource={RelativeSource AncestorType=ContentPresenter}}"
                                            ToolTip="{DynamicResource LOCFriendsAchFeed_Tooltip_Clear}" />
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <TextBlock x:Name="FriendsStatusText"
                                Foreground="{DynamicResource TextBrush}"
                                Opacity="0.8"
                                Margin="0,8,0,0" />

                        <StackPanel Margin="0,12,0,0" Orientation="Horizontal" HorizontalAlignment="Left">
                                <Button Content="{DynamicResource LOCFriendsAchFeed_FamilySharing_ScanButton}"
                                    Click="FamilyScan_Click"
                                    Width="220"
                                    Margin="0,0,8,0" />
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>


<!-- ================== TAB: PREVIEW FEED (DUMMY) ================== -->
            <TabItem Header="{DynamicResource LOCFriendsAchFeed_Settings_TabPreview}">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <!-- Filters -->
                            <RowDefinition Height="Auto" />
                            <!-- Status -->
                            <RowDefinition Height="Auto" />
                            <!-- Progress -->
                            <RowDefinition Height="Auto" />
                            <!-- List -->
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!-- TITLE / SUBTITLE ABOVE GRID -->
                        <StackPanel Grid.Row="0"
                                    Margin="0,0,0,10">
                            <TextBlock Text="{DynamicResource LOCFriendsAchFeed_Title_PluginName}"
                                       Foreground="{DynamicResource TextBrush}"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Margin="0,0,0,2" />
                            <TextBlock Text="{DynamicResource LOCFriendsAchFeed_Preview_Subtitle}"
                                       Foreground="{DynamicResource TextBrush}"
                                       Opacity="0.7"
                                       FontSize="12" />
                        </StackPanel>

                        <!-- SHIFT REAL FEED GRID DOWN ONE ROW -->
                        <Grid Grid.Row="3" Margin="0,10,0,0">
                            <Grid.RowDefinitions>
                                <!-- Filters -->
                                <RowDefinition Height="Auto" />
                                <!-- Status -->
                                <RowDefinition Height="Auto" />
                                <!-- Progress -->
                                <RowDefinition Height="Auto" />
                                <!-- List -->
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <!-- ========== ROW 0: Filters + buttons (dummy) ========== -->
                            <Grid Grid.Row="0" Margin="0,0,0,8">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />   <!-- Friend label -->
                                    <RowDefinition Height="Auto" />   <!-- Friend input + buttons -->
                                    <RowDefinition Height="Auto" />   <!-- Game filter -->
                                    <RowDefinition Height="Auto" />   <!-- Achievement label -->
                                    <RowDefinition Height="Auto" />   <!-- Achievement input -->
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />    <!-- Filters -->
                                    <ColumnDefinition Width="Auto" /> <!-- Buttons -->
                                </Grid.ColumnDefinitions>

                                <!-- Friend label -->
                                <TextBlock Grid.Row="0"
                                           Grid.Column="0"
                                           Text="{DynamicResource LOCFriendsAchFeed_Feed_Label_Friend}"
                                           Margin="0,0,0,2"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource TextBrushDarker}" />

                                <!-- Friend input + clear button -->
                                <Grid Grid.Row="1" Grid.Column="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="30" />
                                    </Grid.ColumnDefinitions>

                                    <ComboBox Grid.Column="0"
                                              Height="28"
                                              Padding="8,2,8,2"
                                              HorizontalAlignment="Stretch"
                                              VerticalAlignment="Center"
                                              Text="{DynamicResource LOCFriendsAchFeed_Sample_FriendName}"
                                              IsEditable="True"
                                              IsTextSearchEnabled="True" />

                                    <Button Grid.Column="1"
                                            Content="Ã—"
                                            Padding="0"
                                            Margin="4,0,0,0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center">
                                        <Button.Style>
                                            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </Grid>

                                <!-- Buttons: Quick / Full / Cancel (dummy) -->
                                <StackPanel Grid.Row="1"
                                            Grid.Column="1"
                                            Orientation="Horizontal"
                                            Margin="50,0,0,0"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center">
                                    <Button Content="{DynamicResource LOCFriendsAchFeed_Feed_Button_Quick}"
                                            Focusable="False"
                                            FontSize="12"
                                            Width="64"
                                            Margin="0,0,10,0"
                                            ToolTip="{DynamicResource LOCFriendsAchFeed_Feed_Button_Quick_Tooltip}" />
                                    <Button Content="{DynamicResource LOCFriendsAchFeed_Feed_Button_Full}"
                                            Focusable="False"
                                            FontSize="12"
                                            Width="64"
                                            Margin="0,0,10,0"
                                            ToolTip="{DynamicResource LOCFriendsAchFeed_Feed_Button_Full_Tooltip}" />
                                    <Button Content="{DynamicResource LOCFriendsAchFeed_Feed_Button_Cancel}"
                                            Focusable="False"
                                            FontSize="12"
                                            Width="64"
                                            Margin="0,0,0,0"
                                            ToolTip="{DynamicResource LOCFriendsAchFeed_Feed_Button_Cancel_Tooltip}" />
                                </StackPanel>

                                <!-- Game filter row -->
                                <StackPanel Grid.Row="2"
                                            Grid.Column="0"
                                            Margin="0,4,0,0">
                                    <TextBlock Text="{DynamicResource LOCFriendsAchFeed_Feed_Label_Game}"
                                               Margin="0,0,0,2"
                                               Foreground="{DynamicResource TextBrushDarker}"
                                               FontSize="11" />
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="30" />
                                        </Grid.ColumnDefinitions>
                                        <ComboBox Grid.Column="0"
                                                  Height="28"
                                                  Padding="8,2,8,2"
                                                  HorizontalAlignment="Stretch"
                                                  Text="{DynamicResource LOCFriendsAchFeed_Sample_GameName}"
                                                  IsEditable="True"
                                                  IsTextSearchEnabled="True" />
                                        <Button Grid.Column="1"
                                                Content="Ã—"
                                                Padding="0"
                                                Margin="4,0,0,0"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center" />
                                    </Grid>
                                </StackPanel>

                                <!-- Achievement label -->
                                <TextBlock Grid.Row="3"
                                           Grid.Column="0"
                                           Text="{DynamicResource LOCFriendsAchFeed_Feed_Label_Achievement}"
                                           Margin="0,4,0,2"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource TextBrushDarker}" />

                                <!-- Achievement input -->
                                <Grid Grid.Row="4" Grid.Column="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="30" />
                                    </Grid.ColumnDefinitions>

                                    <TextBox Grid.Column="0"
                                             Height="28"
                                             Padding="8,2,8,2"
                                             ToolTip="{DynamicResource LOCFriendsAchFeed_Feed_Tooltip_SearchAchievement}"
                                             VerticalContentAlignment="Center"
                                             HorizontalAlignment="Stretch"
                                             Text="{DynamicResource LOCFriendsAchFeed_Sample_HiddenAchievementTitle}" />

                                    <Button Grid.Column="1"
                                            Content="Ã—"
                                            Padding="0"
                                            Margin="4,0,0,0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center" />
                                </Grid>
                            </Grid>

                            <!-- ========== ROW 1: Status (dummy) ========== -->
                            <StackPanel Grid.Row="1"
                                        Orientation="Horizontal"
                                        Margin="0,0,0,4">
                                <TextBlock Text="{DynamicResource LOCFriendsAchFeed_Feed_Status_Sample}"
                                           Foreground="{DynamicResource TextBrush}"
                                           Opacity="0.75"
                                           TextWrapping="Wrap" />
                                <TextBlock Text="  " />
                                <TextBlock Text="{DynamicResource LOCFriendsAchFeed_Feed_Status_CacheLast}"
                                           Foreground="{DynamicResource TextBrushDarker}"
                                           Opacity="0.7"
                                           VerticalAlignment="Center" />
                                <TextBlock Text="{DynamicResource LOCFriendsAchFeed_Sample_CacheTimestamp}"
                                           Foreground="{DynamicResource TextBrush}"
                                           Opacity="0.7"
                                           VerticalAlignment="Center" />
                            </StackPanel>

                            <!-- ========== ROW 2: Progress (dummy) ========== -->
                            <ProgressBar Grid.Row="2"
                                         Height="20"
                                         Margin="0,0,0,8"
                                         Minimum="0"
                                         Maximum="100"
                                         Value="40" />

                            <!-- ========== ROW 3: Sample feed card ========== -->
                            <Border Grid.Row="3"
                                    BorderBrush="{DynamicResource NormalBorderBrush}"
                                    BorderThickness="1"
                                    Background="Transparent"
                                    CornerRadius="4"
                                    Padding="0">
                                <ScrollViewer VerticalScrollBarVisibility="Auto"
                                              HorizontalScrollBarVisibility="Disabled">
                                    <StackPanel>

										<!-- One sample group card -->
										<Border Margin="6"
												Padding="8"
												Background="{DynamicResource ControlBackgroundBrush}"
												BorderBrush="{DynamicResource NormalBorderBrush}"
												BorderThickness="1"
												CornerRadius="3">
											<StackPanel>

												<!-- Header -->
												<StackPanel Orientation="Horizontal"
															Margin="0,0,0,4">
													<Border Width="{Binding FriendAvatarSize}"
															Height="{Binding FriendAvatarSize}"
															Background="{DynamicResource GlyphBrush}"
															CornerRadius="4"
															VerticalAlignment="Center" />
													<StackPanel Margin="8,0,0,0">
														<StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="{DynamicResource LOCFriendsAchFeed_Sample_FriendName}"
																	FontWeight="SemiBold"
																	Foreground="{DynamicResource TextBrush}" />
															<TextBlock Text="{DynamicResource LOCFriendsAchFeed_Feed_Header_Achieved}"
																	Margin="4,0,0,0"
																	Foreground="{DynamicResource TextBrush}"
																	Opacity="0.6" />
															<TextBlock Text=" "
																	Foreground="{DynamicResource TextBrush}"
																	Opacity="0.6" />
															<TextBlock Text="{DynamicResource LOCFriendsAchFeed_Feed_Header_In}"
																	Foreground="{DynamicResource TextBrush}"
																	Opacity="0.6" />
                                                            <TextBlock Text="{DynamicResource LOCFriendsAchFeed_Sample_GameName}"
																	Margin="4,0,0,0"
																	Foreground="{DynamicResource TextBrush}" />
														</StackPanel>
                                                            <TextBlock Text="{DynamicResource LOCFriendsAchFeed_Sample_Date}"
																Foreground="{DynamicResource TextBrush}"
																Opacity="0.6"
																FontSize="12" />
													</StackPanel>
												</StackPanel>

												<!-- Achievements list (two example rows) -->
												<StackPanel Margin="0,4,0,0">

													<!-- Row 1: hidden / locked -->
													<Border Margin="0,1,0,1"
															Padding="3"
															CornerRadius="3"
															BorderBrush="{DynamicResource NormalBorderBrush}"
															BorderThickness="0"
															Background="#11FFFFFF">
														<Grid>
															<Grid.ColumnDefinitions>
																<ColumnDefinition Width="{Binding FriendAvatarSize}" />
																<ColumnDefinition Width="Auto" />
																<ColumnDefinition Width="*" />
															</Grid.ColumnDefinitions>

															<!-- Padlock -->
															<TextBlock Grid.Column="0"
																	Text="ðŸ”’"
																	VerticalAlignment="Center"
																	HorizontalAlignment="Center"
																	Foreground="{DynamicResource TextBrush}"
																	Opacity="0.85" />

															<!-- Icon -->
															<Border Grid.Column="1"
																	Width="{Binding AchievementIconSize}"
																	Height="{Binding AchievementIconSize}"
																	Margin="8,0,8,0"
																	Background="{DynamicResource GlyphBrush}"
																	CornerRadius="3"
																	VerticalAlignment="Center" />

															<!-- Text -->
															<StackPanel Grid.Column="2">
                                                                <TextBlock Text="{DynamicResource LOCFriendsAchFeed_Sample_HiddenAchievementTitle}"
																		FontWeight="Bold"
																		Foreground="{DynamicResource TextBrush}"
																		TextWrapping="Wrap" />
                                                                <TextBlock Text="{DynamicResource LOCFriendsAchFeed_Sample_HiddenAchievementDescription}"
																		Foreground="{DynamicResource TextBrush}"
																		Opacity="0.6"
																		FontSize="12"
																		TextWrapping="Wrap"
																		Margin="0,2,0,0" />
																<!-- Friend unlock time (for the hidden achievement) -->
                                                                <TextBlock Text="{DynamicResource LOCFriendsAchFeed_Sample_TimeFriend}"
																		Foreground="{DynamicResource TextBrush}"
																		Opacity="0.6"
																		FontSize="11"
																		Margin="0,2,0,0" />
																<!-- No 'You unlocked' line here -->
															</StackPanel>
														</Grid>
													</Border>

													<!-- Row 2: normal visible achievement -->
													<Border Margin="0,1,0,1"
															Padding="3"
															CornerRadius="3"
															BorderBrush="{DynamicResource NormalBorderBrush}"
															BorderThickness="0">
														<Grid>
															<Grid.ColumnDefinitions>
																<ColumnDefinition Width="{Binding FriendAvatarSize}" />
																<ColumnDefinition Width="Auto" />
																<ColumnDefinition Width="*" />
															</Grid.ColumnDefinitions>

															<!-- Empty padlock column for alignment -->
															<TextBlock Grid.Column="0" Text="" />

															<!-- Icon -->
															<Border Grid.Column="1"
																	Width="{Binding AchievementIconSize}"
																	Height="{Binding AchievementIconSize}"
																	Margin="8,0,8,0"
																	Background="{DynamicResource GlyphBrush}"
																	CornerRadius="3"
																	VerticalAlignment="Center" />

															<!-- Text -->
															<StackPanel Grid.Column="2">
                                                                <TextBlock Text="{DynamicResource LOCFriendsAchFeed_Sample_VisibleAchievementTitle}"
																		FontWeight="Bold"
																		Foreground="{DynamicResource TextBrush}"
																		TextWrapping="Wrap" />
                                                                <TextBlock Text="{DynamicResource LOCFriendsAchFeed_Sample_VisibleAchievementDescription}"
																		Foreground="{DynamicResource TextBrush}"
																		Opacity="0.8"
																		FontSize="12"
																		TextWrapping="Wrap"
																		Margin="0,2,0,0" />
																<!-- Friend unlock time -->
                                                                <TextBlock Text="{DynamicResource LOCFriendsAchFeed_Sample_TimeFriend}"
																		Foreground="{DynamicResource TextBrush}"
																		Opacity="0.6"
																		FontSize="11"
																		Margin="0,2,0,0" />
																<!-- 'You unlocked' preview now on the visible achievement -->
																<TextBlock Margin="0,2,0,0"
																		Foreground="{DynamicResource TextBrush}"
																		Opacity="0.6"
																		FontSize="11">
																	<TextBlock.Style>
																		<Style TargetType="TextBlock">
																			<Setter Property="Visibility" Value="Collapsed" />
																			<Style.Triggers>
																				<DataTrigger Binding="{Binding IncludeSelfUnlockTime}"
																							Value="True">
																					<Setter Property="Visibility" Value="Visible" />
																				</DataTrigger>
																			</Style.Triggers>
																		</Style>
																	</TextBlock.Style>
																	<TextBlock.Inlines>
                                                                        <Run Text="{DynamicResource LOCFriendsAchFeed_Feed_Label_SelfUnlockTime}" />
                                                                        <Run Text=" " />
                                                                        <Run Text="{DynamicResource LOCFriendsAchFeed_Sample_TimeSelf}" />
																	</TextBlock.Inlines>
																</TextBlock>
															</StackPanel>
														</Grid>
													</Border>
												</StackPanel>
											</StackPanel>
										</Border>
									</StackPanel>
                                </ScrollViewer>
                            </Border>
                        </Grid>
                    </Grid>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
